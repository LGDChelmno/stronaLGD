---
title: LGD Che≈Çmno - Konkursy
layout: 'base.njk'
---
    <main class="konkursy">
        <div class="container-konkursy">
            <h1>Konkursy</h1>
            <div class="tabs-container">
                {%- for tabs in collections.tabs | reverse -%}
                <button class="tab" onclick="showTab('{{ tabs.data.id }}')">{{ tabs.data.title }}</button>
            </div>

            
            <div id="{{ tabs.data.id }}" class="tab-content">
                <h6 class="konkursy-data">{{ tabs.data.date | postDate}}</h6>
                {{ tabs.content | safe }}

                {% if tabs.data.files %}
                <ul>
                    {%for file in tabs.data.files %}
                    <li>
                        <a href="{{ file.file | url }}" target="_blank">
                            {% if file.fileType == 'pdf' %}
                            PDF: 
                        {% elseif file.fileType == 'docx' %}
                            DOCX: 
                        {% elseif file.fileType == 'xlsx' %}
                            XLSX: 
                        {% else %}
                            Inny typ pliku: 
                        {% endif %}
                        {{ file.file.name }}
                        </a>
                    </li>
                    {%- endfor -%}
                </ul>
                {% endif %}
            </div>
            {%- endfor -%}

        </div>
    </main>
    